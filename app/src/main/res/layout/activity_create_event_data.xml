<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".createEventDataActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/start_date_box"
        android:hint=" Click to Select Start Date"
        android:textSize="14sp"
        android:layout_below="@+id/event_name_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="date|text"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|time"
        android:ems="10"
        android:id="@+id/start_time_box"
        android:hint="Click to Select Start Time"
        android:textSize="14sp"
        android:layout_below="@+id/start_date_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_street_address_box"
        android:layout_below="@+id/start_time_box"
        android:hint="Starting Street Address"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/start_date_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_city_box"
        android:hint="City/Town"
        android:layout_below="@+id/start_street_address_box"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/start_time_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_state_box"
        android:hint="State"
        android:textSize="14sp"
        android:layout_below="@+id/start_city_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/start_city_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next>>"
        android:id="@+id/Next_btn"
        android:width="150dp"
        android:height="25dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="42px"
        android:background="@color/green"
        android:layout_alignTop="@+id/Cancel_btn"
        android:layout_alignRight="@+id/numberSeatsAvailable"
        android:layout_alignEnd="@+id/numberSeatsAvailable" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/Cancel_btn"
        android:width="150dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="42px"
        android:background="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberSeatsAvailable"
        android:hint="Number of Seats"
        android:textSize="@dimen/abc_text_size_small_material"
        android:gravity="center"
        android:layout_below="@+id/start_zipcode_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/start_state_box"
        android:layout_alignEnd="@+id/start_state_box" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_box"
        android:hint="Your Event Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_zipcode_box"
        android:hint="Zip Code"
        android:layout_below="@+id/start_state_box"
        android:layout_alignRight="@+id/start_state_box"
        android:layout_alignEnd="@+id/start_state_box"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/start_city_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
