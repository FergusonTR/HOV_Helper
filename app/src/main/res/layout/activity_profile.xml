<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ProfileManagement">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create A Profile"
            android:id="@+id/btnCreateProfileScrn"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update My Profile"
            android:id="@+id/btnUpdateProfileScrn"
            android:layout_below="@+id/btnCreateProfileScrn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete My Profile"
            android:id="@+id/btnDeleteProfileScrn"
            android:layout_below="@+id/btnUpdateProfileScrn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Profiles (Test)"
            android:id="@+id/btnViewProfileScrn"
            android:layout_below="@+id/btnDeleteProfileScrn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:id="@+id/btnSignOut"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
