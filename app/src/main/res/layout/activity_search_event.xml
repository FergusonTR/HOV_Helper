<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"


            tools:context="sweng500team2summer15.hov_helper.event.management.SearchEventActivity"
            android:weightSum="1">
            <EditText
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_Street_Box"
                android:inputType="textPostalAddress"
                android:hint="@string/Start_Search_Street_Address"
                android:gravity="center"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_City_Box"
                android:inputType="textPostalAddress"

                android:gravity="center"
                android:hint="@string/Start_Search_City_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_State_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/Start_Search_State_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/Start_Search_ZipCode_Box"
                android:hint="@string/Start_Search_ZipCode_Box"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/Start_Search_Date_Box"
                android:gravity="center"
                android:hint="@string/Start_Search_Date_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <SeekBar
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/StartSearchDistanceBar" />

            <EditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/startSearchDistance"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Start Search Distance"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>

            <EditText
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_Street_Box"
                android:inputType="textPostalAddress"
                android:hint="@string/End_Search_Street_Address"
                android:gravity="center"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_City_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/End_Search_City_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_State_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/End_Search_State_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/End_Search_ZipCode_Box"
                android:hint="@string/End_Search_ZipCode_Box"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <SeekBar
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:id="@+id/EndSearchDistanceBar" />

            <EditText
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:id="@+id/EndSearchDistance"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="End Search Distance"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search For Drivers"
                android:id="@+id/textView23"
                android:layout_weight="1.42"
                android:layout_gravity="right"
                android:gravity="center" />

            <ImageButton
                android:layout_width="371dp"
                android:layout_height="match_parent"
                android:id="@+id/Drive_Search_btn"
                android:src="@mipmap/ic_launcher"
                android:background="@color/white"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search for Riders"
                android:id="@+id/textView24"
                android:gravity="center" />

            <ImageButton
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:id="@+id/Ride_search_btn"
                android:src="@mipmap/ic_thumb"
                android:background="@color/white"
                android:layout_weight="1.92" />

        </LinearLayout>

</ScrollView>