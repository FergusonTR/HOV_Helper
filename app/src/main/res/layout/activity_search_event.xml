<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"


            tools:context="sweng500team2summer15.hov_helper.event.management.SearchEventActivity"
            android:weightSum="1">

            <TextView
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Enter desired starting location "
                android:id="@+id/textView25"
                android:textStyle="bold" />

            <EditText
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_Street_Box"
                android:inputType="textPostalAddress"
                android:hint="@string/Start_Search_Street_Address"
                android:gravity="center"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_City_Box"
                android:inputType="textPostalAddress"

                android:gravity="center"
                android:hint="@string/Start_Search_City_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Start_Search_State_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/Start_Search_State_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/Start_Search_ZipCode_Box"
                android:hint="@string/Start_Search_ZipCode_Box"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/Start_Search_Date_Box"
                android:gravity="center"
                android:hint="@string/Start_Search_Date_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                android:enabled="true" />

            <TextView
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Search distance From start location"
                android:id="@+id/textView21"
                android:textStyle="italic" />

            <SeekBar
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:id="@+id/StartSearchDistanceBar"
                android:indeterminate="false"
                android:layout_gravity="center_horizontal"
                android:max="50" />

            <TextView
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0 miles from start"
                android:id="@+id/startProgressText"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView27"
                android:clickable="false"
                android:enabled="false" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Enter desired ending location"
                android:id="@+id/textView26"
                android:textStyle="bold" />

            <EditText
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_Street_Box"
                android:inputType="textPostalAddress"
                android:hint="@string/End_Search_Street_Address"
                android:gravity="center"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_City_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/End_Search_City_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/End_Search_State_Box"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:hint="@string/End_Search_State_Box"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/End_Search_ZipCode_Box"
                android:hint="@string/End_Search_ZipCode_Box"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Search distance from end location"
                android:id="@+id/textView22"
                android:textStyle="italic" />

            <SeekBar
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:id="@+id/EndSearchDistanceBar"
                android:layout_gravity="center_horizontal"
                android:max="50"
                android:indeterminate="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0 miles from end"
                android:id="@+id/EndProgressText"
                android:gravity="center" />

            <TextView
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search For Drivers"
                android:id="@+id/textView23"
                android:layout_weight="1.42"
                android:layout_gravity="right|center_horizontal"
                android:gravity="center" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Drive_Search_btn"
                android:src="@mipmap/ic_launcher"
                android:background="@color/white"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search for Riders"
                android:id="@+id/textView24"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/Ride_search_btn"
                android:src="@mipmap/ic_thumb"
                android:background="@color/white"
                android:layout_weight="1.92"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

</ScrollView>