<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sweng500team2summer15.hov_helper.EventDetailsActivity">

    <TextView android:text="EVENT DETAILS" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pickup Location"
        android:id="@+id/textView"
        android:layout_below="@+id/eventDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickupLat"
        android:text="47.598262 "
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:inputType="numberSigned" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickupLon"
        android:layout_alignTop="@+id/pickupLat"
        android:layout_toRightOf="@+id/pickupLat"
        android:layout_toEndOf="@+id/pickupLat"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:text="-122.323794"
        android:inputType="numberSigned" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dropoff Location"
        android:id="@+id/textView2"
        android:layout_below="@+id/pickupLat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropOffLat"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/pickupLat"
        android:layout_alignStart="@+id/pickupLat"
        android:text="47.594804"
        android:inputType="numberSigned" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/dropOffLon"
        android:layout_alignBottom="@+id/dropOffLat"
        android:layout_alignLeft="@+id/pickupLon"
        android:layout_alignStart="@+id/pickupLon"
        android:text="-122.331691"
        android:layout_alignRight="@+id/pickupLon"
        android:layout_alignEnd="@+id/pickupLon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Route Map"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:onClick="buttonOnClick" />

</RelativeLayout>
